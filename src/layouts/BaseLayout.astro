---
import "../styles/global.css";
const year = new Date().getFullYear();
---

<style>
  div {
    height: 100vh;
    width: 100%;
    max-width: 880px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  header {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  main {
    flex: 1;
    padding: 24px 16px;
    overflow: auto;
  }

  header,
  footer {
    text-align: center;
  }

  footer {
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

<div>
  <header>
    <h1>Training Program Library</h1>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <sub>Keith Fayant @Copyright {year};</sub>
  </footer>
</div>
